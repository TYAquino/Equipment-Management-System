@page "/Manage Customer Accounts"
@inherits Manage_Customer
@using SoftwareAnalysis.Models;
@inject CustomerDbAccessor CustomerDbAccessor

<header id="headerEquipment" class="headerForEquipment">
	<h2>Customer Account Information</h2>
</header>

<hr />

<div class="firstLine">
	<div class="groupboxes">
		<label for="textbox">First Name:</label>
		<InputText id="textbox" name="textbox" @bind-Value="customer.FirstName" />
	</div>
	<div class="groupboxes">
		<label for="textbox">Last Name:</label>
		<InputText id="textbox" name="textbox" @bind-Value="customer.LastName"/>
	</div>
	<div class="groupboxes">
		<label for="textbox">Phone Number:</label>
		<InputNumber id="textbox" name="textbox" @bind-Value="customer.PhoneNumber" />
	</div>
	<div class="groupboxes">
		<label for="textbox">Email Address:</label>
		<InputText id="textbox" name="textbox" @bind-Value="customer.EmailAddress" />
	</div>
	<div>
		<button class="button1 btn-primary" @onclick="() => Add(customer)">Add</button>
	</div>
</div>

<hr />

<div class="secondLine">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Customer ID</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Phone Number</th>
				<th>Email Address</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var tmpCustomer in customers)
			{
				<tr>
					<td>@tmpCustomer.CustomerId</td>
					<td>@tmpCustomer.FirstName</td>
					<td>@tmpCustomer.LastName</td>
					<td>@tmpCustomer.PhoneNumber</td>
					<td>@tmpCustomer.EmailAddress</td>
					<td class="text-center">
						<button class="btn btn-danger" @onclick="() => Delete(tmpCustomer)">Delete</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
	<div class="alert alert-danger">
		@errorMessage
	</div>
}


<style>

	h2 {
		text-align: center;
	}
	
	.groupboxes {
		display: flex;
		align-items: center;
		margin-bottom: 10px;
	}

	.groupboxes label {
		width: 150px; 
		text-align: left;
		margin-right: 10px;
	}

	.radiobutton1 label {
		width: 50px;
		text-align: left;
		margin-right: 10px;
	}

	.groupboxes textarea {
		width: 100%; 
		resize: vertical;
	}

	.button1 {
		margin-top: 20px;
	}

	.search-button {
		margin-right:auto;
		padding: 2px 4px;
		border: solid;
		border-radius: 2px;
		cursor: pointer;
	}
</style>

